{
    "manifest_version": 2,
    "name": "Chrome Netflix OMDB",
    "version": "1.0",
    "description": "Display OMDB ratings and data on Netflix shows and movies.",
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "http://fonts.googleapis.com/",
        "https://fonts.googleapis.com/",
        "https://www.netflix.com/*",
        "file:///html/*"
    ],
    "web_accessible_resources": [
        "html/post-install.html"
    ],
    "browser_action": {
        "default_popup": "html/options.html"
    },
    "options_page": "html/options.html",
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": false
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://www.netflix.com/*",
                "file:///html/*"
            ],
            "exclude_matches": [
                "https://*.atlassian.net/wiki/*"
            ],
            "js": [
                "js/omdbRating.js"
            ],
            "all_frames": true
        }
    ]
}